net: "ECO_Lite.prototxt"

# testing parameter
test_iter: 3000
test_interval: 1000
test_initialization: false

# output
display: 20
average_loss: 20
snapshot: 1000
snapshot_prefix: "snapshots/ECO_Lite_kinetics"
debug_info: false

# learning rate
base_lr: 0.001
lr_policy: "step"
gamma: 0.1
stepsize: 24000
max_iter: 60000
iter_size: 3

# parameter of SGD
momentum: 0.9
weight_decay: 0.0005
clip_gradients: 40

# GPU setting
solver_mode: GPU
solver_type: NESTEROV 
richness: 100

